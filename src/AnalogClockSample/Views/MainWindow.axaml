<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AnalogClockSample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AnalogClockSample.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AnalogClockSample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AnalogClockSample">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <views:AnalogClock SelectedDateTime="{Binding CurrentDateTime}" />

</Window>
