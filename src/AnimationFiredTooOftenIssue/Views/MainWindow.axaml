<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AnimationFiredTooOftenIssue.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AnimationFiredTooOftenIssue.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AnimationFiredTooOftenIssue">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<DataGrid ItemsSource="{Binding Items}">
		<DataGrid.Columns>
			<DataGridTemplateColumn Header="IsActive">
				<DataTemplate DataType="vm:Item">
				<ToggleSwitch IsChecked="{Binding IsSelected}" />
			</DataTemplate>
			</DataGridTemplateColumn>
			<DataGridTextColumn Binding="{Binding Name}" Header="Name" />
		</DataGrid.Columns>
	</DataGrid>
	
	<!--<ListBox Items="{Binding Items}" >
		<ListBox.ItemTemplate>
			
		</ListBox.ItemTemplate>
	</ListBox>--> 
		
</Window>
