<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CalendarDatePickerIssue.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CalendarDatePickerIssue.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CalendarDatePickerIssue">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

	<StackPanel>
		<TextBlock>Select the upper bound</TextBlock>
		<CalendarDatePicker DisplayDateEnd="{CompiledBinding MaxDisplayDate}" SelectedDate="{CompiledBinding MinDisplayDate}" />
		
		<TextBlock>Select the lower bound</TextBlock>
		<CalendarDatePicker DisplayDateStart="{CompiledBinding MinDisplayDate}" SelectedDate="{CompiledBinding MinDisplayDate}" />
		
		<TextBlock Text="Select a date inside defined range"/>
		<CalendarDatePicker SelectedDate="{CompiledBinding SelectedDate}" 
							DisplayDateStart="{CompiledBinding MinDisplayDate}"
							DisplayDateEnd="{CompiledBinding MaxDisplayDate}" />
	</StackPanel>

</Window>
