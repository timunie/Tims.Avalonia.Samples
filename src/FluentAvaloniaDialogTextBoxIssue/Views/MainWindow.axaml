<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FluentAvaloniaDialogTextBoxIssue.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FluentAvaloniaDialogTextBoxIssue.Views.MainWindow"
        x:CompileBindings="False"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FluentAvaloniaDialogTextBoxIssue">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Button Content="Show Input Dialog"  Command="{Binding ShowDialogAsync}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

</Window>
